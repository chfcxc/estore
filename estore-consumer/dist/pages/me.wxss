@import "./../compontents/tabbar.wxss";

page{
  padding: 0;
}
.user {
  width: 30%;
  padding: 40rpx;
  display: inline-block;
  box-sizing: border-box;
  vertical-align: middle;
}
.user-img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
  vertical-align: middle;
}
.changeuser {
  width: 200rpx;
  height: 50rpx;
  font-size: 18rpx;
}
.userinfo {
  display: inline-block;
  font-size: 32rpx;
  vertical-align: middle;
}
page,
.page,
.page__bd{
  height: 100%;
}
.page__bd{
  padding-bottom: 0;
}
.weui-tab__content{
  padding-top: 60px;
  text-align: center;
}
.weui-cell__ft {
  color: black;
}
/*dialog*/
.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 22222;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 99999;
  background: #fff;
  margin: -180rpx 105rpx;
  border-radius: 10rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-text {
  display: flex;
  background: #fff;
  border-radius: 4rpx;
  font-size: 28rpx;
  color:#999;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 100%;
  color: #ec5300;
  text-align: center;
}
.weui-cell__bd {
  margin-left: 20rpx;
}
.navbtn {
  width: 100%;
  height: 100rpx;
}
.weui-cell__btnbd {
  flex:none;
}
.loginbtn {
  width:200rpx;
  height:70rpx;
  line-height:70rpx;
  padding-left:0;
  padding-right:0;
  margin-left:50rpx;
  margin-right: 0;
  color: #333;
  border: none;
  background-color: rgba(0, 0, 0, 0.1);
}
.nick {
  margin-top:40rpx;
}
