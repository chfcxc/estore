@import "./../compontents/tabbar.wxss";

.weui-media-box__hd_in-appmsg {
  margin-right:.8em;
  width:283rpx;
  height:150rpx;
  line-height:150rpx;
  text-align:center;
}
.weui-media-box__thumb{
  width: 283rpx;
  height: 150rpx;
  /*vertical-align: middle;*/
}
.cart-name {
  font-size: 32rpx;
  color: #000;
}
.price {
  margin-top: 30rpx;
}
.newprice {
  color: #EB4A50;
  font-size: 40rpx;
}
.discount {
  margin: 0 30rpx;
  color: #9A9A9A;
}
.oldprice {
  text-decoration: line-through;
  color: #9A9A9A;
}
.weui-media-box{
  padding:30rpx;
}
/*排序*/
.cart-handle {
  overflow: hidden;
  padding: 0 40rpx 20rpx;
  font-size: 30rpx;
  color: #555;
}
.sortClass{
  position: absolute;
  border-width:20rpx;
  border-style: solid;
  right: -40rpx;
}
.sort_top{
  top:40rpx;
  border-color:transparent;
}
.sort_bottom{
  top:70rpx;
  border-color:transparent;
}
.sortall {
  display: inline-block;
}
.sortprice {
  display: inline-block;
  margin-left: 200rpx;
  position: relative;
}
.change {
  display: inline-block;
  width: 46rpx;
  height: 46rpx;
  float: right;
  margin-top: 47rpx;
}
.all-active {
  color: #67ABFE;
}
.bottom-active {
  border-top-color: #67ABFE;
}
.top-active {
  border-bottom-color: #67ABFE;
}

